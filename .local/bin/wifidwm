#!/bin/sh


case $BUTTON in
        2) "st" -e "vim" "$0";;
        3) setsid -f "st" -e nmtui;;
esac

ifg=^c#3a86ff^
tfg=^d^

CONNAME=$(nmcli -a | grep 'Wired connection' | awk 'NR==1{print $1}')
if [ "$CONNAME" = "" ]; then
    CONNAME=$(nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -c 5-)
fi


#icon="Ôç∂"
#icon="üåê"
#icon="Û∞§®"
icon="Û∞Üã"
echo "$ifg$icon $CONNAME$tfg"
